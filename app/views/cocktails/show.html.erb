<h1><%= @cocktail.name %></h1>
<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<h3>Ingredients</h3>
<ol>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <a><%= dose.description %></a>
    <a><%= link_to "Delete",
            cocktail_dose_path(@cocktail, dose),
            method: :delete,
            data: { confirm: "Are you sure?" } %></a>
  </li>
  <% end %>
</ol>
<a><%= link_to "Create new dose", new_cocktail_dose_path(@cocktail) %></a>
<%= link_to "Back to home", root_path %>